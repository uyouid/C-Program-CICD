{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug App (C)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/app",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "build-app"
    },
    {
      "name": "Debug Test (CppUTest)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/test",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "build-test"
    }
  ]
}